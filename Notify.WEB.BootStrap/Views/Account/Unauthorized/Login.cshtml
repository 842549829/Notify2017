@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <title>登录</title>

    <link href="~/Content/Scripts/tools/hplus/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/Scripts/tools/hplus/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/Scripts/tools/hplus/css/animate.min.css" rel="stylesheet">
    <link href="~/Content/Scripts/tools/hplus/css/style.min.css" rel="stylesheet">
    <link href="~/Content/Scripts/tools/hplus/css/login.min.css" rel="stylesheet">
    @*<!--[if lt IE 9]>
    <meta http-equiv="refresh" content="0;ie.html" />
    <![endif]-->
    <script>
        if (window.top !== window.self) { window.top.location = window.location };
    </script>*@
</head>

<body class="signin">
    <div class="signinpanel">
        <div class="row">
            <div class="col-sm-7">
                <div class="signin-info">
                    <div class="logopanel m-b">
                        <h1>Notify</h1>
                    </div>
                    <div class="m-b"></div>
                    <h4>欢迎使用 <strong>Notify</strong></h4>
                    <ul class="m-b">
                        <li><i class="fa fa-arrow-circle-o-right m-r-xs"></i> 优势一</li>
                        <li><i class="fa fa-arrow-circle-o-right m-r-xs"></i> 优势二</li>
                        <li><i class="fa fa-arrow-circle-o-right m-r-xs"></i> 优势三</li>
                        <li><i class="fa fa-arrow-circle-o-right m-r-xs"></i> 优势四</li>
                        <li><i class="fa fa-arrow-circle-o-right m-r-xs"></i> 优势五</li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-5">
                <form>
                    <h4 class="no-margins">登录：</h4>
                    <p class="m-t-md">登录到Notify后台</p>
                    <input type="text" class="form-control uname" placeholder="用户名" id="user" />
                    <input type="password" class="form-control pword m-b" placeholder="密码" id="pwd" />
                    <p>
                        <img class="clearfix" alt="点击刷新" title="点击刷新" id="validateCode" onclick="getValidateCode()" src="@Url.Action("GetValidateCode")" style="width: 28%; vertical-align: middle; height:34px; line-height: 1.4285;" />
                        <input type="text" class="form-control m-b" placeholder="验证码" style="width: 70%; vertical-align: middle; display: inline; color:#333;"  id="code"/>
                    </p>
                    <button class="btn btn-success btn-block" id="btnLogin">登录</button>
                </form>
            </div>
        </div>
        <div class="signup-footer">
            <div class="pull-left">
                &copy; 2015 All Rights Reserved.
            </div>
        </div>
    </div>
</body>

</html>
<script src="~/Content/Scripts/tools/jquery-1.11.3.min.js"></script>
<script src="~/Content/Scripts/tools/json2.js"></script>
<script src="~/Content/Scripts/tools/layer-v2.0/layer/layer.js"></script>
<script src="~/Content/Scripts/widget/common.js"></script>
<script src="~/Content/Scripts/views/Account/Unauthorized/Login.js"></script>