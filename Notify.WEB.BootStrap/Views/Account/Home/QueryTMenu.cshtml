@using Notify.Controller.Base
@{
    var user = BaseController.LogonUser;
    var menu = BaseController.EsayUIMenu;
}
<ul class="nav" id="side-menu">
    <li class="nav-header">
        <div class="dropdown profile-element">
            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                <span class="clear">
                    <span class="block m-t-xs"><strong class="font-bold">@user.AccountNo</strong></span>
                    <span class="text-muted text-xs block">@user.AccountName<b class="caret"></b></span>
                </span>
            </a>
            <ul class="dropdown-menu animated fadeInRight m-t-xs">
                <li>
                    <a class="J_menuItem" href="#">修改密码</a>
                </li>
                <li>
                    <a class="J_menuItem" href="#">个人资料</a>
                </li>
                <li>
                    <a class="J_menuItem" href="#">联系我们</a>
                </li>
                <li>
                    <a class="J_menuItem" href="#">信箱</a>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="#">安全退出</a>
                </li>
            </ul>
        </div>
        <div class="logo-element">
            Notify
        </div>
    </li>
    @foreach (var item in menu)
    {
        <li>
            <a href="#">
                <i class="fa fa-home"></i>
                <span class="nav-label">@item.menuname</span>
                <span class="fa arrow"></span>
            </a>
            <ul class="nav nav-second-level">
                @foreach (var child in item.menus)
                {
                    <li>
                        <a class="J_menuItem" href="@child.url" data-index="0">@child.menuname</a>
                    </li>
                }
            </ul>
        </li>
    }
</ul>